  <h1 class="report_title"><%= @report.title %></h1>
  <div class="report_detail">
    <%= image_tag 'default-avatar.png' %>
    <div>
      <p>cohki0305</p>
      <p>2020/4/16</p>
    </div>
    <div class="report_detail_actions">
